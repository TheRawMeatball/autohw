{{#*inline "page"}}
	{{#if flash}}
		<div class="row alert alert-danger">
			{{flash}}
		</div>
	{{/if}}
    <div class="row">
        <div class="col-lg">
            <h1 class="text-center">Giriş yap</h1>
            <form action="/api/user/login" method="post">
                <div class="form-group">
    				<label for="login-name">Kullanıcı adı</label>
    				<input type="text" class="form-control" name="name" id="login-name">
  				</div>
  				<div class="form-group">
    				<label for="login-password">Şifre</label>
    				<input type="password" class="form-control" name="password" id="login-password">
  				</div>
				<button type="submit" class="btn btn-primary">Giriş yap</button>
            </form>
        </div>
        <div class="col-lg">
            <h1 class="text-center">Hesap aç</h1>
            <form action="/api/user/register" method="post">
			  	<div class="form-group">
			    	<label for="register-name">Kullanıcı adı</label>
			    	<input type="text" class="form-control" name="name" id="register-name">
			  	</div>
			  	<div class="form-group">
			    	<label for="register-password">Şifre</label>
				    <input type="password" class="form-control" name="password" id="register-password">
			  	</div>
				<div class="form-group">
			    	<label for="register-password">Şifreyi onayla</label>
				    <input type="password" class="form-control" name="confirm_password" id="register-password">
			  	</div>
				<div class="form-group">
			    	<label for="register-password">Sınıf adı</label>
				    <input type="text" class="form-control" name="class_name" id="register-password">
			  	</div>
				<button type="submit" class="btn btn-primary">Hesap aç</button>
			</form>
        </div>
    </div>
{{/inline}}

{{~> layout~}}
