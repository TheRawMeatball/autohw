{{#*inline "page"}}
	{{#if flash}}
		<div class="row alert alert-danger">
			{{flash}}
		</div>
	{{/if}}
    <div class="row">
        <div class="col-lg">
            <h1 class="text-center">Ayarlar</h1>
            <form action="/api/user/update" method="post" autocomplete="off">
                <div class="form-group">
    				<label for="name">Kullanıcı adı değiştir</label>
					<input type="text" class="form-control" name="name" id="name" value="{{user.name}}">
  				</div>
				<div class="form-group">
					<div class="input-group">
						<div style="width: 60%;" class="input-group-prepend">
  						  	<span style="width: 100%;" class="input-group-text">Sınıf</span>
  						</div>
						<input type="number" class="form-control" name="class">
				    	<input type="text" class="form-control" name="class_name">
					</div>
				</div>
				<div class="form-group">
				    <label>Gün ağırlıkları</label>
				    <div class="input-group">
    					<input type="number" name="mo" class="form-control" value="{{weights.0}}">
						<input type="number" name="tu" class="form-control" value="{{weights.1}}">
				        <input type="number" name="we" class="form-control" value="{{weights.2}}">
				        <input type="number" name="th" class="form-control" value="{{weights.3}}">
				        <input type="number" name="fr" class="form-control" value="{{weights.4}}">
				        <input type="number" name="sa" class="form-control" value="{{weights.5}}">
				        <input type="number" name="su" class="form-control" value="{{weights.6}}">
				  </div>
				</div>									  																		  
  				<div class="form-group">
    				<label for="login-password">Şifre değiştir</label>
    				<input type="password" class="form-control" name="password" id="password" autocomplete="new-password">
				   	<input type="password" class="form-control" name="confirm_password" id="repeat-password">
  				</div>
  				<button type="submit" class="btn btn-primary">Değiştir</button>
            </form>
        </div>
    </div>
{{/inline}}

